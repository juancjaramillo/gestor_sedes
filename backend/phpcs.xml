<?xml version="1.0"?>
<ruleset name="Project">
  <description>PSR-12 para app, routes, database y tests</description>
  <rule ref="PSR12"/>
  <file>app</file>
  <file>routes</file>
  <file>database</file>
  <file>tests</file>

  <!-- Excluir carpetas que no se lintéan -->
  <exclude-pattern>vendor/</exclude-pattern>
  <exclude-pattern>storage/</exclude-pattern>
  <exclude-pattern>bootstrap/</exclude-pattern>
</ruleset>
